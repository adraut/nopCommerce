@model PaymentsSearchModel

@inject IEventPublisher eventPublisher

@{
    //page title
    ViewBag.Title = T("Admin.Configuration.Payments").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Payments");
}

<nop-antiforgery-token/>

<form asp-controller="Payment" asp-action="MethodRestrictions" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.Payments")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.PaymentsListButtons })
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            <nop-tabs id="payments">
                <nop-tab asp-name="tab-payment" asp-title="@T("Admin.Configuration.Payment.Methods")" asp-default="true">@await Html.PartialAsync("Methods", Model)</nop-tab>
                <nop-tab asp-name="tab-methodrestrictions" asp-title="@T("Admin.Configuration.Payment.MethodRestrictions")">@await Html.PartialAsync("MethodRestrictions", Model)</nop-tab>
            </nop-tabs>
        </div>
    </div>

    @{
        //custom tabs
        var eventMessage = new AdminTabStripCreated(this.Html, "payments");
        eventPublisher.Publish(eventMessage);
        foreach (var eventBlock in eventMessage.BlocksToRender)
        {
            @eventBlock
        }
    }
</form>
